#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main(){

    double notas, media, soma=0;
    int contador=0, i;

    for(i=0; i<4; i++){
        scanf("%lf", &notas);

        soma += notas;
        contador += 1;
    }
    media = soma/contador;

    printf("Informe a primeira nota do aluno:\n");
    printf("Informe a segunda nota do aluno:\n");
    printf("Informe a terceira nota do aluno:\n");
    printf("Media: %.3lf\n", media);

    return 0;
}
