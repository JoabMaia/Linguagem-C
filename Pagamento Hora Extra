#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main(){

    double salario, resolucao1, resolucao2;
    int quantidade_horas_trabalhadas;

    scanf("%lf %d", &salario, &quantidade_horas_trabalhadas);

    resolucao1 = (quantidade_horas_trabalhadas * 5 * salario)/100;
    resolucao2 = (resolucao1 + salario);

    printf("%.2lf\n", resolucao2);

    return 0;
}
