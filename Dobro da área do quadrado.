#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main(){

    int lado;
    double area, duas_vezes_area;
    scanf("%d", &lado);

    area = pow(lado, 2);
    duas_vezes_area = 2 * area;

    printf("Informe a medida de um dos lados do quadrado:\n");
    printf("Resultado: %.1lf\n", area);
    printf("Dobro: %.1lf\n", duas_vezes_area);

    return 0;
}
