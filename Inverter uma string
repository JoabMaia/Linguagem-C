#include<stdio.h>
#include<string.h>
#include<stdlib.h>

int main(){
       char string[50],aux[50];
       int a,b;
       gets(string);
       b=strlen(string)-1;
       for(a=0;string[a]!='\0';a++){
       aux[b]=string[a];
       b--;
       }
       aux[a]='\0';
       strcpy(string,aux);
       printf("%s",string);

       return 0;
}
