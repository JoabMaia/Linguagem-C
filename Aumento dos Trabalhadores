#include<stdio.h>
#include<string.h>

int main(){

    double salario, resultado;
    scanf("%lf", &salario);


    if(salario > 300 && salario < 500){
        resultado = salario * 1.07;
        printf("%.2lf\n", resultado);
    }
    if(salario > 500){
        resultado = salario * 1.1;
        printf("%.2lf\n", resultado);
    }
    if(salario < 300){
        resultado = salario * 1.05;
        printf("%.2lf\n", resultado);
    }

    return 0;
}
