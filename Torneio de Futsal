#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main(){

    double num, porcentagem1, porcentagem2, porcentagem3;

    scanf("%lf", &num);

    porcentagem1 = (num * 60)/100;
    porcentagem2 = (num * 30)/100;
    porcentagem3 = (num * 10)/100;

    printf("%.2lf\n", porcentagem1);
    printf("%.2lf\n", porcentagem2);
    printf("%.2lf\n", porcentagem3);

    return 0 ;
}
