#include<stdio.h>
#include<string.h>

int main(){

    int a, b, temp, atual, soma;
    scanf("%d %d", &a, &b);

    if(a > b){
        temp = a;
        a = b;
        b = temp;
    }
    atual = 0;
    soma = 0;
    while(atual <= b){
        if(atual > 0)
            soma = soma + atual;
            atual ++;
    }
    printf("%d\n", soma);

    return 0;
}
